<p>

<table border="1">
<thead>
	<tr>
		<th>id</th>
		<th>youbi</th>
		<th>start_hour</th>
		<th>start_min</th>
		<th>end_hour</th>
		<th>end_min</th>
		<th>active</th>
		<th>delete</th>
		
	</tr>
</thead>
<br>
<tbody>
<% @indexTimeConfig.each do |index| %>
	<tr>
		<td><%= index.id %></td>
 		<td><%= index.youbi %></td>
 		<td><%= index.start_hour%></td>
 		<td><%= index.start_minitus%></td>
 		<td><%= index.end_hour %></td>
 		<td><%= index.end_minitus %></td>
 		<td>
 			<% if index.activation == 0  then %>
 			<%= button_to "on", { :action => "admin_time_config_active_on", :id => index.id }, :confirm => "actevate?", :method => :put %>
 			<% else%>
 			<%= button_to "off", { :action => "admin_time_config_active_off", :id => index.id }, :confirm => "actevate?", :method => :put %>
 			<% end%>
 		</td>
 		<td><%= button_to "削除", { :action => "admin_time_config_destroy", :id => index.id }, :confirm => "本当に削除しますか?", :method => :delete %></td>
 	</tr>
<% end %>
</tbody>
</table>
</p>

